<Window x:Class="MVVM_Einheitenumrechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_Einheitenumrechner" 
        xmlns:viewmodels="clr-namespace:MVVM_Einheitenumrechner.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <!-- Hintergrundbild -->
        <Image Source="E:\1AAA_Systemtechnik\Programmieren\MVVM-Projekt\MVVM_Einheitenumrechner\Images\StartPage.png" Stretch="Fill" />

        <!-- Overlay für Text und Button -->
        <Grid>
            <!-- Text links oben -->
            <Grid>
                <TextBlock Text="Der Taschenrechner für deine Einheiten"
               FontSize="36"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,30,0,0"
               TextAlignment="Center">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#70C1B3" Offset="0.0" />
                            <!-- Dunkleres Mintgrün -->
                            <GradientStop Color="#43A047" Offset="0.5" />
                            <!-- Dunkleres Grün -->
                            <GradientStop Color="#00838F" Offset="1.0" />
                            <!-- Dunkleres Türkis -->
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
            </Grid>

            <Image Source="Button1.png"
           IsHitTestVisible="False" />


            <Button Width="125" Height="75"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Margin="10"
        Click="OpenUnitView_Click"
        Background="Transparent"
        BorderThickness="0">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              RecognizesAccessKey="True"/>
                    </ControlTemplate>
                </Button.Template>

                <Image Source="E:\1AAA_Systemtechnik\Programmieren\MVVM-Projekt\MVVM_Einheitenumrechner\Images\Button1.png"
           Stretch="Uniform"/>

                <Button.Effect>
                    <DropShadowEffect Color="Black"
                          Direction="320"
                          ShadowDepth="5"
                          BlurRadius="10"
                          Opacity="0.4"/>
                </Button.Effect>
            </Button>



        </Grid>
    </Grid>

</Window>
