<Window x:Class="MVVM_Einheitenumrechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_Einheitenumrechner" 
        xmlns:viewmodels="clr-namespace:MVVM_Einheitenumrechner.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <!-- Hintergrundbild -->
        <Image Source="Images/StartPage.png" Stretch="Fill" />

      
        <!-- Overlay für Text und Button -->
        <Grid>
            <!-- Text links oben -->
            <Grid>
                <TextBlock Text="Der Taschenrechner für deine Einheiten"
               FontSize="36"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,30,0,0"
               TextAlignment="Center">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#70C1B3" Offset="0.0" />
                            <!-- Dunkleres Mintgrün -->
                            <GradientStop Color="#43A047" Offset="0.5" />
                            <!-- Dunkleres Grün -->
                            <GradientStop Color="#00838F" Offset="1.0" />
                            <!-- Dunkleres Türkis -->
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
            </Grid>

            <Image Source="Button1.png"
           IsHitTestVisible="False" />


            <Button Width="125" Height="75"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Margin="10"
        Click="OpenUnitView_Click"
        Background="Transparent"
        BorderThickness="0"
                             ToolTip="Klicke den Button, um zur Umrechnungs-Ansicht zu kommen">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              RecognizesAccessKey="True"/>
                    </ControlTemplate>
                </Button.Template>

                <Image Source="Images/Button1.png"
                Stretch="Uniform"/>

                <Button.Effect>
                    <DropShadowEffect Color="Black"
                          Direction="320"
                          ShadowDepth="5"
                          BlurRadius="10"
                          Opacity="0.4"/>
                </Button.Effect>
                
            </Button>

            <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0,0,0,0"
            >

                <!-- KM-Eingabefeld (links der Mitte) -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Width="175">
                    <TextBlock Text="Kilometer"
                   FontSize="32"
                   FontWeight="Bold">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#70C1B3" Offset="0.0" />
                                <GradientStop Color="#43A047" Offset="0.5" />
                                <GradientStop Color="#00838F" Offset="1.0" />
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                </StackPanel>

                <!-- Pfeil oder Platzhalter -->
                <TextBlock Text="→"
               FontSize="32"
               VerticalAlignment="Center"
               Margin="10,0">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#70C1B3" Offset="0.0" />
                            <GradientStop Color="#43A047" Offset="0.5" />
                            <GradientStop Color="#00838F" Offset="1.0" />
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>

                <!-- Meter-Ausgabe (rechts der Mitte) -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="150">
                    <TextBlock Text="Meter"
                   FontSize="32"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,5">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#70C1B3" Offset="0.0" />
                                <GradientStop Color="#43A047" Offset="0.5" />
                                <GradientStop Color="#00838F" Offset="1.0" />
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

        </Grid>
    </Grid>

</Window>
