<Window x:Class="MVVM_Einheitenumrechner.Views.SettingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_Einheitenumrechner.Views"
        mc:Ignorable="d"
        Title="SettingView" Height="500" Width="800" Background="#FEF3E1">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0 0 0 20">
            <Button Content="← Back"
                    Width="90"
                    Height="35"
                    Click="BackButton_Click"
                    Background="#E0E0E0"
                    Foreground="#333"
                    BorderBrush="#CCCCCC"
                    Style="{StaticResource RoundedButtonStyle}"
                    Margin="0,0,10,0"/>

            <StackPanel DockPanel.Dock="Right" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="⚙ Einstellungen"
                           FontSize="36"
                           FontWeight="Bold"
                           HorizontalAlignment="Center">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#70C1B3" Offset="0.0" />
                            <GradientStop Color="#43A047" Offset="0.5" />
                            <GradientStop Color="#00838F" Offset="1.0" />
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>

                <!-- Linie unter dem Titel -->
                <Rectangle Height="5"
                           Width="325"
                           Margin="0,5,0,0"
                           HorizontalAlignment="Center">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#70C1B3" Offset="0.0" />
                            <GradientStop Color="#43A047" Offset="0.5" />
                            <GradientStop Color="#00838F" Offset="1.0" />
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </StackPanel>
        </DockPanel>

        <!-- Content -->
        <Border Grid.Row="1"
                Padding="15"
                CornerRadius="12"
                Background="White"
                BorderBrush="#DDD"
                BorderThickness="1"
                Width="360"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <StackPanel>

                <TextBlock Text="Kategorie"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding CategoryName}"
                         Background="#F5F5F5"
                         BorderBrush="#CCC"
                         BorderThickness="1"
                         Height="30"
                         Padding="5"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Einheit"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding Unit}"
                         Background="#F5F5F5"
                         BorderBrush="#CCC"
                         BorderThickness="1"
                         Height="30"
                         Padding="5"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Faktor"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding Factor}"
                         Background="#F5F5F5"
                         BorderBrush="#CCC"
                         BorderThickness="1"
                         Height="30"
                         Padding="5"
                         Margin="0,0,0,25"/>

                <TextBlock Text="{Binding MessageText}"
           Foreground="{Binding MessageColor}"
           FontWeight="Bold"
           FontSize="13"
           Margin="0,5,0,0"/>


                <Button Content="💾 Speichern"
                        Command="{Binding SaveCommand}"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="14"
                        Height="40"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        Width="120"
                        Style="{StaticResource RoundedButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
