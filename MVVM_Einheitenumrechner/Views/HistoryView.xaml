<Window x:Class="MVVM_Einheitenumrechner.Views.HistoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_Einheitenumrechner.Views"
mc:Ignorable="d"
        Title="HistoryView"
        Background="#FEF3E1"
        MinHeight="550"
        MinWidth="650">

    <Window.Resources>
        <!-- Style für abgerundete Buttons -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Kopfbereich -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="← Back"
                    ToolTip="Zurück zur Startseite"
                    Width="80"
                    Height="30"
                    Click="BackButton_Click"
                    Background="#DDDDDD"
                    Foreground="Black"
                    Style="{StaticResource RoundedButtonStyle}"
                    Margin="0,0,10,0"/>

            <!-- Titel mit Farbverlauf -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <TextBlock Text="HISTORY"
                           FontSize="36"
                           FontWeight="Bold"
                           HorizontalAlignment="Center">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#70C1B3" Offset="0.0" />
                            <GradientStop Color="#43A047" Offset="0.5" />
                            <GradientStop Color="#00838F" Offset="1.0" />
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>

                <!-- Linie unter dem Titel -->
                <Rectangle Height="5"
                           Width="200"
                           Margin="0,5,0,0"
                           HorizontalAlignment="Center">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#70C1B3" Offset="0.0" />
                            <GradientStop Color="#43A047" Offset="0.5" />
                            <GradientStop Color="#00838F" Offset="1.0" />
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </StackPanel>

            <Image Grid.Column="2"
                   Source="/Images/StartPage.png"
                   Width="50"
                   Height="50"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"/>
        </Grid>

        <!-- Verlaufstabelle -->
        <DataGrid Grid.Row="1"
                  Width="800"
                  MinHeight="300"
                  ItemsSource="{Binding HistoryEntries}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  RowHeight="35"
                  ColumnHeaderHeight="40"
                  FontSize="14"
                  AlternatingRowBackground="#FFEFEFEF"
                  Background="White"
                  BorderThickness="1"
                  BorderBrush="#CCC">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Zeitpunkt" Binding="{Binding Timestamp}" Width="*"/>
                <DataGridTextColumn Header="Kategorie" Binding="{Binding CategoryName}" Width="*"/>
                <DataGridTextColumn Header="Von" Binding="{Binding FromUnit}" Width="*"/>
                <DataGridTextColumn Header="Nach" Binding="{Binding ToUnit}" Width="*"/>
                <DataGridTextColumn Header="Eingabewert" Binding="{Binding InputValue}" Width="*"/>
                <DataGridTextColumn Header="Ergebnis" Binding="{Binding ResultValue}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>